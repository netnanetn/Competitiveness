<div class="login-container">
    <div class="login-box">
@using (Html.BeginForm()) {
    <div class="login-form">
        <h2>Reset Ip đăng nhập hệ thống quản trị</h2>
        <div id="messages">@Html.DisplayNotifications(TempData)</div>
        <div class="input-box input-left">
            <label for="Username">Tài khoản:</label><br/>            
            @Html.TextBox("Username", "", new { @class = "required-entry input-text", id = "Username"})
        </div>
        <div class="input-box input-right">
            <label for="Password">Mật khẩu:</label><br />            
            @Html.Password("Password", "", new { @class = "required-entry input-text", id = "Password" })
        </div>
        <div class="clear"></div>
        <div class="form-buttons">
            <input type="submit" class="form-button" value="Đăng nhập" title="Đăng nhập" />
        </div>
    </div>
    <p class="legal">Falcon Framework is a trademark of DKT Technology Jsc. Copyright &copy; @DateTime.Now.Year DKT Technology Jsc.</p>
}
    <div class="bottom"></div>
    </div>
</div>