@model Falcon.Admin.CoreModules.Models.ChangePasswordUserAdminModel
           

@using (Html.BeginForm())
{    
  @Html.Partial("_Toolbar")          
<div class="entry-edit">
    <div class="entry-edit-head">
    <h4 class="icon-head head-edit-form fieldset-legend">Thông tin tài khoản</h4>
    <div class="form-buttons"></div>
</div>
    <div id="base_fieldset" class="fieldset ">
    <div class="hor-scroll">           
       @Html.HiddenFor(model => model.Id)
<table cellspacing="0" class="form-list">    
    <tr>
        <td class="label">@Html.LabelRequiredFor(model => model.Password)</td>
        <td class="value">
            @Html.PasswordFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </td>
    </tr>
    <tr>
        <td class="label">@Html.LabelRequiredFor(model => model.ConfirmPassword)</td>
        <td class="value">
            @Html.PasswordFor(model => model.ConfirmPassword)
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </td>
    </tr>
</table>
</div>
</div>
</div>
}