@model Falcon.Admin.CoreModules.Models.EditUserModel
@using (Html.BeginForm())
{
    @Html.Partial("_Toolbar")
                           
    <div class="entry-edit">
        <div class="entry-edit-head">
            <h4 class="icon-head head-edit-form fieldset-legend">
                Xác nhận xóa người dùng @Model.UserName</h4>
            <div class="form-buttons">
            </div>
        </div>
        <div class="fieldset " id="user_base_fieldset">
            <div class="hor-scroll">
                @Html.HiddenFor(model => model.Id)
                <table cellspacing="0" class="form-list">
                    <tr>
                        <td class="label">
                            Tài khoản
                        </td>
                        <td class="value">
                            @Model.UserName
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Email
                        </td>
                        <td class="value">
                            @Model.Email
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Tên người dùng
                        </td>
                        <td class="value">
                            @Model.FullName
                        </td>
                    </tr>
                    <tr>
                        <td class="label">Trạng thái
                        </td>
                        <td class="value">
                            @if (Model.IsActive)
                            { 
                                <text>Hoạt động</text>
                            }
                            else
                            { 
                                <text>Bị khóa</text>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Địa chỉ
                        </td>
                        <td class="value">
                            @Model.Address
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            Mô tả
                        </td>
                        <td class="value">
                            @Model.Description
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
}
