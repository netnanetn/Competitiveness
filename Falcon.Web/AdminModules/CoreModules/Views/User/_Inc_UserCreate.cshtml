@model CreateUserModel
<div class="entry-edit">
        <div class="entry-edit-head">
            <h4 class="icon-head head-edit-form fieldset-legend">Thông tin người dùng</h4>
            <div class="form-buttons"></div>
        </div>
        <div class="fieldset " id="user_base_fieldset">
            <div class="hor-scroll">                
                <table cellspacing="0" class="form-list">
    <tr>
        <td class="label">@Html.LabelRequiredFor(model => model.UserName)</td>
        <td class="value">                            
            @Html.TextBoxFor(model => model.UserName, new { @class = "input-text" })
                            
            @Html.ValidationMessageFor(model => model.UserName)
        </td>
    </tr>
    <tr>
        <td class="label">@Html.LabelRequiredFor(model => model.Password)</td>
        <td class="value">                            
            @Html.PasswordFor(model => model.Password, new { @class = "input-text" })
                            
            @Html.ValidationMessageFor(model => model.Password)
        </td>
    </tr>
    <tr>
        <td class="label">@Html.LabelRequiredFor(model => model.ConfirmPassword)</td>
        <td class="value">                            
            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "input-text" })
                            
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </td>
    </tr>
    <tr>
        <td class="label">@Html.LabelRequiredFor(model => model.Email)</td>
        <td class="value">
            @Html.TextBoxFor(model => model.Email, new { @class = "input-text" })
            @Html.ValidationMessageFor(model => model.Email)
        </td>
    </tr>                    
    <tr>
        <td class="label">@Html.LabelRequiredFor(model => model.FullName)</td>
        <td class="value">
            @Html.TextBoxFor(model => model.FullName, new { @class = "input-text" })
            @Html.ValidationMessageFor(model => model.FullName)
        </td>
    </tr>
    <tr>
        <td class="label">@Html.LabelFor(model => model.IsActive)</td>
        <td class="value">
            @Html.EditorFor(model => model.IsActive)
            @Html.ValidationMessageFor(model => model.IsActive)
        </td>
    </tr>
    <tr>
        <td class="label">@Html.LabelFor(model => model.Address)</td>
        <td class="value">
            @Html.TextBoxFor(model => model.Address, new { @class = "input-text" })
            @Html.ValidationMessageFor(model => model.Address)
        </td>
    </tr>
    <tr>
        <td class="label">@Html.LabelFor(model => model.Description)</td>
        <td class="value">
            @Html.TextBoxFor(model => model.Description, new { @class = "input-text" })
            @Html.ValidationMessageFor(model => model.Description)
        </td>
    </tr>
</table>
            </div>
        </div>
    </div>
