@Html.BeginToolbar(ViewData["ToolbarTitle"].ToString(), "icon-head head-cms-page")

@{
    switch ( ViewContext.RouteData.Values["action"].ToString().ToLower())
    {
        case "index":
            if(Model.CategoryId > 0)
            {
                @Html.Button("Thêm mới", ButtonActionType.Add, new { onclick = "setLocation('" + Url.Action("create", new { categoryId = Model.CategoryId }) + "')", type = "button" });
            }
            else
            {
                @Html.Button("Thêm mới", ButtonActionType.Add, new { onclick = "setLocation('" + Url.Action("create") + "')", type = "button" });
            }
            break;
        case "edit":            
            @Html.Button("Quay lại", ButtonActionType.Back, new { onclick = "setLocation('" + Url.Action("index", new { categoryId = Model.CategoryId }) + "')", type = "button" });
            @Html.Button("Reset", ButtonActionType.Reset, new { type = "reset" });
            @Html.Button("Xóa trang", ButtonActionType.Delete, new { onclick = "return confirm('Bạn có thực sự muốn xóa bài viết trợ giúp này?');" });
            @Html.Button("Lưu trang", ButtonActionType.Save);
            @Html.Button("Lưu và tiếp tục sửa", ButtonActionType.SaveAndContinueEdit);
                                                                                     break;
        case "create":
            @Html.Button("Quay lại", ButtonActionType.Back, new { onclick = "setLocation('" + Url.Action("index", new { categoryId = Model.CategoryId}) + "')", type = "button" });
            @Html.Button("Reset", ButtonActionType.Reset, new { type = "reset" });            
            @Html.Button("Lưu trang", ButtonActionType.Save);
            @Html.Button("Lưu và tiếp tục sửa", ButtonActionType.SaveAndContinueEdit);
                                                                                     break;
        case "delete":
            @Html.Button("Quay lại", ButtonActionType.Back, new { onclick = "setLocation('" + Url.Action("index", new { categoryId = Model.CategoryId}) + "')", type = "button" });
            @Html.Button("Xóa trang", ButtonActionType.Delete, new { onclick = "return confirm('Bạn có thực sự muốn xóa bài viết trợ giúp này?');" });
                                                                                                                                         break;
        default:
                                                                                                                                         break;
    }
}

@Html.EndToolbar()